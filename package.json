{
  "name": "octoreport",
  "version": "0.1.0",
  "description": "Generate GitHub PR activity reports (created, participated, response time) for users or teams.",
  "main": "dist/index.js",
  "type": "module",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "keywords": [
    "github",
    "report",
    "pr",
    "activity",
    "typescript"
  ],
  "author": "nvrtmd",
  "license": "MIT",
  "scripts": {
    "build": "tsup src/cli.ts --target es2022 --format esm",
    "test": "vitest run",
    "dev:test": "vitest",
    "prepublishOnly": "npm run build && npm run test",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky"
  },
  "bin": {
    "octoreport": "./dist/cli.js"
  },
  "devDependencies": {
    "@types/node": "^24.0.8",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nvrtmd/octoreport.git"
  },
  "bugs": {
    "url": "https://github.com/nvrtmd/octoreport/issues"
  },
  "homepage": "https://github.com/nvrtmd/octoreport#readme",
  "dependencies": {
    "@octokit/auth-oauth-device": "^8.0.1",
    "inquirer": "^12.7.0",
    "zod": "^3.25.67"
  }
}
